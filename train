class Train

  attr_accessor :speed

  attr_reader :number, :type, :vans
# Имеет номер (произвольная строка) и тип (грузовой,
# пассажирский) и количество вагонов, эти данные
# указываются при создании экземпляра класса  
  def initialize(speed = 0, number, type, vans)
    @speed = speed
    @nubmer = number
    @type = type
    @vans = vans
  end  


# Может набирать скорость
def go 
  self.speed = 60
end  

# Может возвращать текущую скорость
def current
  puts @speed
end  

# Может тормозить (сбрасывать скорость до нуля)
def stop 
  self.speed = 0
end

# Может возвращать количество вагонов
def vans
  puts @vans
end

# Может прицеплять/отцеплять вагоны
# (по одному вагону за операцию, метод просто
# увеличивает или уменьшает количество вагонов).
# Прицепка/отцепка вагонов может осуществляться
# только если поезд не движется.
# def if @speed == 0

def change(value)
  v = @vans
  if @speed == 0
    if value == 1
      v = v + 1
      @vans = v
    else
      v = v - 1
      @vans = v
    end  
  else
    puts "You have to stop at first."  
  end
end    

